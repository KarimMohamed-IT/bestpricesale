@page 
@model bestpricesale.Pages.IndexModel
@{
    ViewData["Title"] = "Best Sales Prices";
}

<!-- Import Bootstrap (if not already included) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <h2 class="mb-4 text-center">Welcome to Best Sales Prices</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-between mb-3">
            <a href="/PageEditor" class="btn btn-primary">+ Създай нова страница</a>
        </div>
    }

    @if (Model.Pages.Any())
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var pageload in Model.Pages)
                {
                    <tr>
                        <td><a href="/PageShell/@pageload.Title" target="_blank">@pageload.Title</a></td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a href="/PageEditor?slug=@pageload.Title" class="btn btn-warning btn-sm">✏ Редактиране</a>
                                <form method="post" asp-page-handler="DeletePage" onsubmit="return confirm('Are you sure you want to delete this page?');" style="display: inline;">
                                    <input type="hidden" name="slug" value="@pageload.Title" />
                                    <button type="submit" class="btn btn-danger btn-sm">🗑 Изтрий</button>
                                </form>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @if (User.IsInRole("Admin"))
        {
            <div class="alert alert-info text-center">No pages found. Create one!</div>
        }
    }
</div>

